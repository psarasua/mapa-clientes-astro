---
import Layout from '../../layouts/Layout.astro';
import Menu from '../../components/Menu.astro';
import ClientesPage from './components/react/ClientesPage.jsx';
// Cargar clientes desde el endpoint API en el lado del servidor Astro
let clientes = [];
try {
  const res = await fetch('http://localhost:4321/api/clientes');
  if (res.ok) {
    clientes = await res.json();
  }
} catch {}
---
<Layout>
  <Menu active="/clientes" />
  <main class="container py-4">
    <ClientesPage client:load />
  </main>
</Layout>
